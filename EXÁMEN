        private void BTNSIGNO_Click(object sender, EventArgs e)
        {
//en esta parte de aqui pongo los if con la condiciÃ³n de que la persona nacio en cierta fecha apareceta un message box que te diga tu signo

            if ((MARZO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 21) || (ABRIL.Checked && Convert.ToInt32(DIA.SelectedItem) <= 19))
            {
                MessageBox.Show("ERES ARIES");
            }
            if ((ABRIL.Checked && Convert.ToInt32(DIA.SelectedItem) >= 20) || (MAYO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 20))
            {
                MessageBox.Show("ERES TAURO");
            }
            if ((MAYO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 21) || (JUNIO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 20))
            {
                MessageBox.Show("ERES GEMINIS");
            }
            if ((JUNIO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 21) || (JULIO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 22))
            {
                MessageBox.Show("ERES CANCER");
            }
            if ((JULIO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 23) || (AGOSTO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 22))
            {
                MessageBox.Show("ERES LEO");
            }
            if ((AGOSTO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 23) || (SEPTIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) <= 22))
            {
                MessageBox.Show("ERES VIRGO");
            }
            if ((SEPTIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) >= 20) || (OCTUBRE.Checked && Convert.ToInt32(DIA.SelectedItem) <= 20))
            {
                MessageBox.Show("ERES LIBRA");
            }
            if ((OCTUBRE.Checked && Convert.ToInt32(DIA.SelectedItem) >= 2) || (NOVIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) <= 21))
            {
                MessageBox.Show("ERES ESCORPION");
            }
            if ((NOVIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) >= 22) || (DICIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) <= 21))
            {
                MessageBox.Show("ERES SAGITARIO");
            }
            if ((DICIEMBRE.Checked && Convert.ToInt32(DIA.SelectedItem) >= 22) || (ENERO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 19))
            {
                MessageBox.Show("ERES CAPRICORNIO");
            }
            if ((ENERO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 20) || (FEBRERO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 18))
            {
                MessageBox.Show("ERES ACUARIO");
            }
            if ((FEBRERO.Checked && Convert.ToInt32(DIA.SelectedItem) >= 19) || (MARZO.Checked && Convert.ToInt32(DIA.SelectedItem) <= 20))
            {
                MessageBox.Show("ERES PISCIS");
            }
           
            }

        






